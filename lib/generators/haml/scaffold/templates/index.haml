%h1 Listing <%= plural_name %>

%table
  %tr
<% for attribute in attributes -%>
    %th= <%= class_name %>.human_attribute_name :<%= attribute.name %>
<% end -%>
    %th
    %th
    %th
  
  - @<%= plural_name %>.each do |<%= singular_name %>|
    %tr{ :class => cycle(:odd, :even) }
<% for attribute in attributes -%>
      %td= <%= singular_name %>.<%= attribute.name %>
<% end -%>
      %td.action= link_to 'Show', <%= singular_name %>
      %td.action= link_to 'Edit', edit_<%= singular_name %>_path(<%= singular_name %>)
      %td.action= link_to 'Destroy', <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete

= link_to 'New <%= singular_name.capitalize %>', new_<%= singular_name %>_path
