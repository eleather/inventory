= form_for(@material) do |f|
  - if @material.errors.any?
    #error_explanation
      %h2= "#{pluralize(@material.errors.count, 'error')} prohibited this user from being saved:"
      
      %ul
        - @material.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :material_type_id
    %br
    = f.text_field :material_type_id
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit
