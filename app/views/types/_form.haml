= form_for(@type) do |f|
  - if @type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@type.errors.count, 'error')} prohibited this user from being saved:"
      
      %ul
        - @type.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :category_id
    %br
    - if Category.all.any?
      = f.select :category_id, Category.all.map {|u| [u.name, u.id]}
    - else
      = "You haven't created any categories.  #{link_to 'Click here', new_category_path} to add one."
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit
