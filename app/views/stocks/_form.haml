= form_for(@stock) do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, 'error')} prohibited this user from being saved:"
      
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :material_id
    %br
    = f.text_field :material_id
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :amount_type_id
    %br
    = f.text_field :amount_type_id
  .field
    = f.label :amount
    %br
    = f.text_field :amount
  .field
    = f.label :purchased_at
    %br
    = f.date_select :purchased_at
  .field
    = f.label :purchase_location_id
    %br
    = f.text_field :purchase_location_id
  .field
    = f.label :purchase_amount
    %br
    = f.text_field :purchase_amount
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit
